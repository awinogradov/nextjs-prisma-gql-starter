{
  "name": "nextjs-prisma-gql-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "types:prisma": "prisma generate",
    "generate:themes": "nodemon --exec 'node ./scripts/themes.js' --watch 'src/design/themes/*.js'",
    "generate:nexus": "nodemon --exec 'ts-node --transpile-only -P nexus.tsconfig.json src/pages/api/graphql' --ext 'ts' --watch '*/graphql/**/*.ts'",
    "generate:genql": "nodemon --exec 'genql --schema ./graphql/schema.graphql --output ./graphql/generated/genql'  --watch 'graphql/schema.graphql'",
    "generate": "concurrently \"npm run generate:nexus\" \"npm run generate:genql\" \"npm run generate:themes\"",
    "db:run": "docker-compose up -d",
    "db:down": "docker-compose down"
  },
  "dependencies": {
    "@apollo/client": "3.5.10",
    "@genql/runtime": "2.9.0",
    "@next-auth/prisma-adapter": "1.0.1",
    "@prisma/client": "3.10.0",
    "apollo-server-micro": "3.6.4",
    "apollo-tracing": "0.15.0",
    "graphql": "15.8.0",
    "graphql-scalars": "1.15.0",
    "micro": "9.3.4",
    "micro-cors": "0.1.1",
    "next": "12.1.0",
    "next-auth": "4.9.0",
    "next-intl": "2.4.1",
    "next-themes": "0.1.1",
    "nexus": "1.3.0",
    "nodemailer": "6.7.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hot-toast": "2.2.0",
    "styled-components": "5.3.3",
    "swr": "1.2.2",
    "tinykeys": "1.4.0"
  },
  "devDependencies": {
    "@genql/cli": "2.9.0",
    "@types/graphql": "14.5.0",
    "@types/node": "17.0.21",
    "@types/nodemailer": "6.4.4",
    "@types/react": "17.0.40",
    "@types/styled-components": "5.1.24",
    "@typescript-eslint/eslint-plugin": "5.14.0",
    "@typescript-eslint/parser": "5.14.0",
    "babel-eslint": "10.1.0",
    "change-case": "4.1.2",
    "concurrently": "7.0.0",
    "dotenv": "16.0.0",
    "eslint": "8.11.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "26.1.1",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.3.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.5",
    "nodemon": "2.0.15",
    "prettier": "2.5.1",
    "prisma": "3.10.0",
    "ts-node": "10.7.0",
    "typescript": "4.6.2"
  }
}
